<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MatchWrap.Horizontal"
              android:layout_marginRight="@dimen/yPaddingMiddle"
              android:background="@color/yBgGray">

    <LinearLayout
        style="@style/MatchWrap.Vertical"
        android:background="@color/yWhite">

        <TextView
            android:id="@+id/mTitleTv"
            style="@style/MatchWrap"
            android:background="@color/yWhite"
            android:gravity="center_horizontal"
            android:padding="@dimen/yPaddingMiddle"
            android:text="指定服装"
            android:textColor="@color/yBlack"
            android:textSize="@dimen/yTextMiddleSize"/>

        <LinearLayout
            style="@style/MatchWrap"
            android:padding="@dimen/yPaddingMiddle">

            <LinearLayout
                android:id="@+id/mWomenDressView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mWomenIv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="center"
                    android:src="@drawable/add"/>

                <TextView
                    android:id="@+id/mWomenTv"
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/yPaddingMiddle"
                    android:text="@string/women_dress"
                    android:textColor="@color/yRed"
                    android:textSize="@dimen/yTextMiddleSize"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mManDressView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/yPadding"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mManIv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="center"
                    android:src="@drawable/add"/>

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/yPaddingMiddle"
                    android:text="@string/man_dress"
                    android:textColor="@color/yRed"
                    android:textSize="@dimen/yTextMiddleSize"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/DividerFixedWidth_10"/>
</LinearLayout>
